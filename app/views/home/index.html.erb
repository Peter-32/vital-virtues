<!-- Main content -->
    <div id="layout">

        <div id="main">
            <div class="header">

                <h1>Vital Virtues</h1>
                <h3>Make an attempt to grow in virtue</h3>
            </div>

            <% if !logged_in? %>
              <p>Please log in or sign up</p>
              <div class="container">

                <%= form_with scope: :user, url: user_path, local: true do |form| %>
                <div class="row">
                  <div class="col-sm-6">
                    <p>
                      <%= form.label :username, "First and Last Name" %><br>
                      <%= form.text_field :username, :size => "15" %>
                    </p>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-12">
                    <p>
                      <%= form.submit "Sign Up", class: "btn btn-primary"%>
                    </p>
                  </div>
                </div>
              <% end %>

              <%= form_for(:session, url: login_path) do |form| %>
              <div class="row">
                <div class="col-sm-6">
                  <p>
                    <%= form.label :username, "First and Last Name" %><br>
                    <%= form.text_field :username, :size => "15" %>
                  </p>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12">
                  <p>
                    <%= form.submit "Log in", class: "btn btn-primary"%>
                  </p>
                </div>
              </div>
          <% end %>

            </div>


          <% else %>
          <%= button_to "Log out", logout_path, method: "delete", class: "btn btn-primary"%>
          <% end %>

            </div>
        </div>
    </div>
